<script>


  function togglebudget(_number) {

    if (_number === 1) {
      // hourly clicked
      $('div.hourly').show();
      $('div.fixed').hide();
      $('div.fixed :input').val('');
    }
    else {
      // fixed clicked
      $('div.fixed').show();
      $('div.hourly').hide();
      $('div.hourly :input').val('');
    }
    return false;


  }
</script>