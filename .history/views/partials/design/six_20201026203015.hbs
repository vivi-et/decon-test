<script>
  function selectbudget(_this, _number, _type) {
    console.log(_this);

    $(`div.${_type}`).removeClass("selecteditem");
    $(_this).addClass("selecteditem");

    $(`input#${_type}`).val(_number);

    togglebudget(_number);

  }

  function togglebudget(_number) {

    if (_number === 1) {
      $('div.hourly').show();
      $('div.fixed').hide();
      jQuery('div.fixed').children(':input').val('');
    }
    else {
      $('div.fixed').show();
      $('div.hourly').hide();
      jQuery('div.hourly').children(':input').val('');
    }
    return false;


  }
</script>