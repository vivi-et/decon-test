<script>


  function togglebudget(_number) {

    if (_number === 1) {
      // hourly clicked
      $('div.hourly').show();
      $('div.fixed').hide();
      $('div.fixed :input').val('');
    }
    else {
      // fixed clicked
      $('div.fixed').show();
      $('div.hourly').hide();
      $('div.hourly :input').val('');
    }
    return false;


  }

  $('div.hourly :input[type=radio]').change(function () {
    console.log(this.value);

    if (this.value === '1') {
      $('div.option1').show();
      $('div.option2').hide();
    }
    else if (this.value === '2') {
      $('div.option2').show();
      $('div.option1').hide();
      $('div.option1 :input').val('');
    }
  });
</script>