    {{> design/one}}
  </div>

  <div part="2" class="two part" hidden>
    {{> design/two}}
  </div>

  <div part="3" class="three part" hidden>
    {{> design/three}}
  </div>

  <div part="4" class="four part" hidden>
    {{> design/four}}
  </div>

  <div part="5" class="five part">
    {{> design/five}}
  </div>

  <div part="6" class="six part" hidden>
    {{> design/six}}
  </div>

