<script>
  let questions = 0;
  let maxQuestions = 4;


  function next(part) {
    if (part === 7) {
      alert('end!')
      return false
    }
    $('div.part').hide();
    $(`[part=${part + 1}]`).show();
  }


  function selectthis(_this, _number, _type) {
    console.log(_this);

    $(`div.${_type}`).removeClass("selected");
    $(_this).addClass("selected");

    $(`input#${_type}`).val(_number);

  }

  function addquestion() {
    if (questions > maxQuestions) {
      alert(`${maxQuestions + 1} only!`)
      questions = maxQuestions;
      return false;
    }
    questions++;

    const html = `{{> design/question}}`;
    $('div#questionfield').append(html);


  }
  function deletequestion(_this) {
    console.log(_this);

    $(_this).closest('div.questionbox').remove();
    questions--;
  }

</script>

<style>
  .selected {
    border-bottom: 10px solid greenyellow !important;
  }
</style>